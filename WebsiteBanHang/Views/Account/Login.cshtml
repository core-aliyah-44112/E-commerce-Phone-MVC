@model WebsiteBanHang.Context.User


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>Đăng nhập tài khoản</h3>
            </div>
            @if (ViewBag.error != null) {
                <div class="alert alert-danger">
                    <p>@ViewBag.error</p>
                </div>
            }
           
        <div class="card-body">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <a href="#" class="btn btn-facebook btn-block mb-2"> <i class="fab fa-facebook-f"></i> &nbsp  Sign in with Facebook</a>
                <a href="#" class="btn btn-google btn-block mb-4"> <i class="fab fa-google"></i> &nbsp  Sign in with Google</a>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                    @if (ViewBag.error1 != null)
                    {
                        <span class="badge badge-danger">@ViewBag.error1</span>
                    }
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Passwords)
                    @Html.PasswordFor(m => m.Passwords, new { @class = "form-control", @placeholder = "Passwords" })
                    @if (ViewBag.error2 != null)
                    {
                        <span class="badge badge-danger">@ViewBag.error2</span>
                    }
                </div>
                <div class="form-group">
                    @if (ViewBag.error3 != null)
                    {
                        <small class="badge badge-danger">@ViewBag.error3</small>
                        <br />
                    }
                    @Html.CheckBoxFor(m => m.Remember)<span class="text"> Remember.</span>

                </div>

                <div class="form-group text-center">
                    <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" />
                </div>

                <p class="text-center mt-4">Bạn chưa có tài khoản? <a href="/dang-ki">Đăng kí</a></p>
                <br><br>
            }
        </div>
        </div>
    </div>
</div>
