@model List<WebsiteBanHang.Context.Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card card-category" style="height: 550px">
                        <div class="img-wrap w-100" style="background:#ffd7d7">
                            <a href="/nhung-san-pham-danh-muc-@item.Slug/@item.Id"><img src="~/Content/images/category/@item.Avatar"></a>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="">@item.Name </a></h4>
                        </div>
                        <div class="card-footer">
                            <p>@item.ShortDetail</p>
                        </div>
                    </div>
                </div> <!-- col.// -->
            }
        </nav> <!-- row.// -->
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
