

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="content-wrapper">
        <div class="container">
            <!-- ========================= SECTION MAIN  ========================= -->
            <div class="card-body">
                <div class="row">
                    <span style="color:#FF0000;text-align:center">
                        <span style="font-size:20px;margin-left:50px">
                            <span style="font-family:verdana,geneva,sans-serif;">
                                <strong>CHÀO MỪNG BẠN ĐẾN TRANG QUẢN TRỊ CỦA SHOP MOTO</strong>&nbsp;
                            </span>
                        </span>
                    </span><br /><br /><br />
                    <div class="col-md-9 col-xl-12 col-lg-9">
                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->

                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="3"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/Slide/slide1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/Slide/slide2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/Slide/slide3.jpg" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/Slide/slide4.jpg" alt="Fort slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                </div> <!-- col.// -->
            </div>
        </div>
    </div>
</section>